{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch JavaScript File (ES Modules)",
      "program": "${file}",
      "runtimeArgs": ["--experimental-modules", "--es-module-specifier-resolution=node"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true
    }
  ]
}
